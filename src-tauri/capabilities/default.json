{
  "$schema": "../gen/schemas/aio-coding-hub-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "updater:default",
    "autostart:default",
    "notification:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/.aio-coding-hub" },
        { "path": "$HOME/.aio-coding-hub/*" },
        { "path": "$HOME/.aio-coding-hub/*/*" },
        { "path": "$HOME/.claude" },
        { "path": "$HOME/.claude/skills" },
        { "path": "$HOME/.claude/*" },
        { "path": "$HOME/.codex" },
        { "path": "$HOME/.codex/skills" },
        { "path": "$HOME/.codex/*" },
        { "path": "$HOME/.codex/skills/*" },
        { "path": "$HOME/.gemini" },
        { "path": "$HOME/.gemini/skills" },
        { "path": "$HOME/.gemini/*" },
        { "path": "$HOME/.gemini/skills/*" }
      ]
    }
  ]
}
